@model ExerciceASP01.Models.Profile.EditForm

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>EditForm</h4>
<hr />
@if (TempData.ContainsKey("message"))
{
    <div class="alert @TempData["alert-type"]">
        <p>@TempData["message"]</p>
    </div>
}
<div class="row">

    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prenom" class="control-label"></label>
                <input asp-for="Prenom" class="form-control" />
                <span asp-validation-for="Prenom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VilleDeResidence" class="control-label"></label>
                <input asp-for="VilleDeResidence" class="form-control" />
                <span asp-validation-for="VilleDeResidence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InscriptionNewsLetter" class="control-label"></label>
                <input type="checkbox" asp-for="InscriptionNewsLetter"></>
                <span asp-validation-for="InscriptionNewsLetter" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Sauvegarder" class="btn btn-primary" />
            </div>


        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Revenir au profil</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
