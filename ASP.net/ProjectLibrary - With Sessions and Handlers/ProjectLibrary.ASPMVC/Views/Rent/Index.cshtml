@using ProjectLibrary.ASPMVC.Handlers
@inject RentSessionManager rentSession


@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Date d'emprunt
                </th>
                <th>
                    Titre du livre
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < rentSession.Basket.Count(); i++)
            {
                <tr>
                    <td>
                        @rentSession.Basket.ElementAt(i).RentTime.Date.ToString("yyyy-MM-dd")

                    </td>
                    <td>
                        <a asp-action="Details" asp-controller="Book" asp-route-id="@rentSession.Basket.ElementAt(i).BookId">@rentSession.Titles.ElementAt(i)</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>




    <a asp-action="Index" asp-controller="Book">Retour à la liste des livres</a>
</div>
